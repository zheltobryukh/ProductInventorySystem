<Page x:Class="ProductInventorySystem.Views.StatisticsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Статистика">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Статистика по товарам" FontSize="20" FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <TextBlock Text="Всего товаров: " FontWeight="Bold"/>
                <TextBlock x:Name="txtTotal" Text="0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Средняя цена: " FontWeight="Bold"/>
                <TextBlock x:Name="txtAvgPrice" Text="0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Общая стоимость: " FontWeight="Bold"/>
                <TextBlock x:Name="txtTotalValue" Text="0"/>
            </StackPanel>

            <Button Content="Обновить" Width="100" Margin="0,15,0,0" 
                    HorizontalAlignment="Left" Click="BtnRefresh_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="dgStats" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="*"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Count}" Width="100"/>
                <DataGridTextColumn Header="Средняя цена" Binding="{Binding AvgPrice}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>